+# fastapi_users/extensions/session_manager.py
+from typing import Optional, List
+from uuid import UUID
+from datetime import datetime
+from fastapi import APIRouter, Depends, HTTPException, status, Request
+from pydantic import BaseModel
+
+
+class Session(BaseModel):
+    id: UUID
+    user_id: UUID
+    token: str
+    created_at: datetime
+    expires_at: Optional[datetime] = None
+
+
+class SessionManager:
+
+    def __init__(self, session_db):
+        self.session_db = session_db
+        self.router = self._create_router()
+
+    async def create_session(
+        self, user_id: UUID, token: str, expires_at: Optional[datetime] = None
+    ):
+
+        payload = {
+            "user_id": user_id,
+            "token": token,
+            "created_at": datetime.now(),
+        }
+
+        created = await self.session_db.create(payload)
+        return created
+
+    async def list_sessions(self, user_id: UUID) -> List[Session]:
+        raw = await self.session_db.list_for_user(user_id)
+
+        return [
+            Session(
+                id=s.id,
+                user_id=s.user_id,
+                token=s.token,
+                created_at=s.created_at,
+                expires_at=getattr(s, "expires_at", None),
+            )
+            for s in raw
+        ]
+
+    async def delete_session(self, user_id: UUID, session_id: UUID) -> bool:
+
+        user_sessions = await self.session_db.list_for_user(user_id)
+        for s in user_sessions:
+            if s.id == session_id:
+                await self.session_db.delete_by_id(session_id)
+                return True
+
+        underlying = getattr(self.session_db, "_by_id", None)
+        if isinstance(underlying, dict):
+            found = underlying.get(session_id)
+            if found is not None:
+
+                if getattr(found, "user_id", None) != user_id:
+                    raise PermissionError("Cannot delete another user's session")
+
+                await self.session_db.delete_by_id(session_id)
+                return True
+
+        return False
+
+    async def delete_all_sessions(self, user_id: UUID) -> int:
+
+        await self.session_db.delete_all_for_user(user_id)
+
+        return 0
+
+    def _create_router(self) -> APIRouter:
+        router = APIRouter()
+
+        async def get_current_user(request: Request):
+            auth: str = request.headers.get("Authorization")
+            if not auth or not auth.startswith("Bearer "):
+                raise HTTPException(
+                    status_code=status.HTTP_401_UNAUTHORIZED,
+                    detail="Missing or invalid token",
+                )
+            token = auth.split(" ", 1)[1]
+            s = await self.session_db.get_by_token(token)
+            if not s:
+                raise HTTPException(
+                    status_code=status.HTTP_401_UNAUTHORIZED, detail="Invalid token"
+                )
+            return s.user_id
+
+        @router.get("", response_model=List[Session])
+        async def _list_sessions(current_user=Depends(get_current_user)):
+            return await self.list_sessions(current_user)
+
+        @router.delete("/{session_id}", status_code=status.HTTP_204_NO_CONTENT)
+        async def _delete_session(
+            session_id: UUID, current_user=Depends(get_current_user)
+        ):
+            try:
+                deleted = await self.delete_session(current_user, session_id)
+            except PermissionError:
+                raise HTTPException(
+                    status_code=status.HTTP_403_FORBIDDEN,
+                    detail="Cannot delete another user's session",
+                )
+            if not deleted:
+                raise HTTPException(
+                    status_code=status.HTTP_404_NOT_FOUND, detail="Session not found"
+                )
+
+        @router.delete("", status_code=status.HTTP_204_NO_CONTENT)
+        async def _delete_all_sessions(current_user=Depends(get_current_user)):
+            await self.delete_all_sessions(current_user)
+
+        return router
